    <view class="page">
        <view class="page__hd">
          <image class="weui-media-box__thumb" src="{{logo}}" />
          <view class="weui-badge">{{td.week}}周</view>
          <view class="page__title">空教室查询</view>
        </view>
        <view class="page__bd page__bd_spacing">
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_select">
                    <view class="weui-cell__hd weui-cell__hd_in-select-after">
                        <view class="weui-label">教学楼</view>
                    </view>
                    <view class="weui-cell__bd">
                        <picker value="{{buildIndex}}" bindchange="buildPicker" range="{{build}}">
                            <view class="weui-select weui-select_in-select-after">{{build[buildIndex]}}</view>
                        </picker>
                    </view>
                </view>
                <view class="weui-cell weui-cell_select">
                    <view class="weui-cell__hd weui-cell__hd_in-select-after">
                        <view class="weui-label">节数</view>
                    </view>
                    <view class="weui-cell__bd">
                        <picker value="{{sectionIndex}}" bindchange="sectionPicker" range="{{section}}">
                            <view class="weui-select weui-select_in-select-after">{{section[sectionIndex]}}</view>
                        </picker>
                    </view>
                </view>
            </view>
            <view class="button-sp-area">
              <button bindtap="searchRoom" class="weui-btn" type="default" plain="true">查询当日空闲教室</button>
            </view>
        </view>
    </view>