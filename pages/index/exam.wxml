    <view class="page">
        <view class="page__hd">
          <image class="weui-media-box__thumb" src="{{logo}}" />
          <view class="weui-badge">17-18-1学期</view>
          <view class="page__title">考试安排查询</view>
          <view class="page__desc">漏课、教室冲突请联系教务，以实际情况为准</view>
        </view>
        <view class="page__bd page__bd_spacing">
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">班级</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="className" placeholder="例如：会1601-5" value="{{className}}" bindinput="classNameInput"/>
                    </view>
                </view>
            </view>
            <view class="button-sp-area">
              <button bindtap="search" class="weui-btn" type="default" plain="true">查询考试安排</button>
            </view>
        </view>
    </view>